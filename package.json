{
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "op:program-keypairs": "mkdir -p target/deploy && op read --account mzerolabs.1password.com 'op://Solana Dev/Solana Program Keys/portal-keypair' > target/deploy/portal-keypair.json && op read --account mzerolabs.1password.com 'op://Solana Dev/Solana Program Keys/earn-keypair' > target/deploy/earn-keypair.json",
    "op:devnet-authority": "op read --account mzerolabs.1password.com 'op://Solana Dev/Solana Program Keys/devnet-authority' > devnet-keypair.json",
    "test": "yarn run jest --preset ts-jest --verbose --testPathPattern='tests/unit/earn.test.ts|tests/unit/portal.test.ts'",
    "build": "anchor build",
    "cli:dev": "op run --env-file='./dev.env' -- ts-node services/cli/main.ts",
    "cli:test": "op run --env-file='./dev.env' -- ts-node services/cli/test.ts",
    "build:devnet": "anchor build -- --features devnet --no-default-features",
    "write-upgrade:devnet": "sh -c 'solana program write-buffer --with-compute-unit-price 300000 --keypair devnet-keypair.json --max-sign-attempts 5 ${0}'",
    "write-upgrade:devnet:earn": "yarn write-upgrade:devnet target/deploy/earn.so",
    "write-upgrade:devnet:portal": "yarn write-upgrade:devnet target/deploy/portal.so",
    "upgrade:devnet": "sh -c 'solana program upgrade --keypair devnet-keypair.json ${1} ${0}'",
    "upgrade:devnet:earn": "yarn upgrade:devnet MzeRokYa9o1ZikH6XHRiSS5nD8mNjZyHpLCBRTBSY4c",
    "upgrade:devnet:portal": "yarn upgrade:devnet mzp1q2j5Hr1QuLC3KFBCAUz5aUckT6qyuZKZ3WJnMmY"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.29.0",
    "@solana-developers/helpers": "^2.7.0",
    "@solana/spl-token": "^0.4.12",
    "@solana/web3.js": "^1.98.0",
    "@sqds/multisig": "^2.1.3",
    "@wormhole-foundation/sdk": "1.0.0",
    "@wormhole-foundation/sdk-definitions": "1.0.0",
    "@wormhole-foundation/sdk-definitions-ntt": "0.5.0",
    "@wormhole-foundation/sdk-solana": "1.0.0",
    "@wormhole-foundation/sdk-solana-core": "1.0.0",
    "@wormhole-foundation/sdk-solana-ntt": "0.7.0-multi-token-alpha.0",
    "anchor-litesvm": "^0.1.1",
    "bn.js": "^5.2.1",
    "litesvm": "^0.1.0",
    "nock": "^14.0.1",
    "sha3": "^2.1.4",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^22.12.0",
    "commander": "^13.1.0",
    "jest": "^29.0.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.2",
    "typescript": "5"
  }
}
